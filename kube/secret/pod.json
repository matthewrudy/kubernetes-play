{
 "apiVersion": "v1beta3",
 "kind": "Pod",
  "metadata": {
    "name": "ruby-secrets"
  },
  "spec": {
    "containers": [{
      "name": "ruby-secrets",
      "image": "matthewrudy/ruby-secrets",
      "volumeMounts": [{
        "name": "secrets",
        "mountPath": "/etc/secrets",
        "readOnly": true
      }],
      "ports":[
         {
            "name":"http-server",
            "containerPort":4567,
            "protocol":"TCP"
         }
      ]
    }],
    "volumes": [{
      "name": "secrets",
      "secret": {
        "secretName": "secret"
      }
    }]
  }
}
